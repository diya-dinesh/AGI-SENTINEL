# ============================================================================
# AGI-Sentinel Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ============================================================================
# Google Gemini API Configuration (REQUIRED)
# ============================================================================
# Get your API key from: https://ai.google.dev/
GENAI_API_KEY=your_api_key_here

# ============================================================================
# Database Configuration
# ============================================================================
# Path to SQLite database file (will be created automatically)
ADSIO_DB_PATH=data/adsio.db

# ============================================================================
# LLM Configuration
# ============================================================================
# Enable/disable Gemini LLM features (true/false)
USE_GEMINI=true

# Gemini model to use
# Options: gemini-2.0-flash-lite, gemini-2.0-flash, gemini-1.5-pro
GOOGLE_MODEL=gemini-2.0-flash-lite

# LLM request timeout (seconds)
LLM_TIMEOUT=30

# Maximum retry attempts for LLM requests
LLM_MAX_RETRIES=2

# ============================================================================
# OpenFDA API Configuration
# ============================================================================
# Request timeout for OpenFDA API (seconds)
OPENFDA_TIMEOUT=20

# Maximum retry attempts for OpenFDA requests
OPENFDA_MAX_RETRIES=3

# ============================================================================
# Analysis Parameters
# ============================================================================
# Minimum number of weeks of data required for analysis
MIN_WEEKS_FOR_ANALYSIS=2

# Z-score threshold for signal detection (higher = more conservative)
# Default: 2.0 (signals with z-score > 2.0 are flagged)
Z_SCORE_THRESHOLD=2.0

# Relative increase threshold for signal detection (higher = more conservative)
# Default: 1.5 (signals with 1.5x increase over baseline are flagged)
RELATIVE_THRESHOLD=1.5

# ============================================================================
# Server Configuration
# ============================================================================
# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Server port
PORT=8000

# Enable auto-reload on code changes (development only)
RELOAD=false

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Directory for log files
LOG_DIR=logs

# Output logs in JSON format (true/false)
LOG_JSON=false

# ============================================================================
# Rate Limiting (Optional)
# ============================================================================
# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Maximum requests per window
RATE_LIMIT_REQUESTS=100

# Rate limit window (seconds)
RATE_LIMIT_WINDOW=60
